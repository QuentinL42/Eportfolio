      </section>
      
      <section>
        <h2>Informations</h2>
        <ul>
          <li>Email : <a href="mailto:mon.email@example.com">mon.email@example.com</a></li>
          <li>Phone : 07 55 55 55 55</li>
          <li>LinkedIn : <a href="https://linkedin.com/in/mon-profile" target="_blank">https://linkedin.com/in/mon-profile</a></li>
        </ul>
      </section>
      
      <section>
        <h2>Languages</h2>
        <ul>
          <li>French : Native</li>
          <li>English : Proficient</li>
          <li>Russian : Learning</li>
        </ul>
      </section>
      {% endblock %}
    </main>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center py-3 mt-4">
      <p>&copy; 2026 - MySite. All rights reserved.</p>
    </footer>

    {% block javascripts %}
      {% block importmap %}
        {{ importmap('app') }}
      {% endblock %}
    {% endblock %}
  </body>
</html>
